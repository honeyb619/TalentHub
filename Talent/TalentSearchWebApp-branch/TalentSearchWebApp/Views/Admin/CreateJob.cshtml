@model BusinessEntities.ViewModel.VmInsertJob
@{
    ViewBag.Title = "Create Job";
}
<style>
    #banner
    {
        display: none;
    }
</style>
<header class="major">
    <h2>Fill out job details</h2>
</header>
<div class="container WhiteBack">
    <div class="row" style="font-weight: bolder;">
        <div class="12u wufoo">
            <section class="section">
                <div class="step well">
                <fieldset>
                        <legend class="headerlegend">Job Details</legend>
                        <ul>
                            <li>
                            <span>
                                        <label for="JobNameField">Job Title</label>
                                        <input id="JobNameField" name="JobNameField" type="text" class="field text ln" value="" tabindex="1">
                                    </span>
                                    <span>
                                        <label for="JobDescriptionField">Job Description</label>
                                        <textarea id="JobDescriptionField" placeholder="Share job description..." name="JobDescriptionField" class="field text ln" tabindex="2">
                                    </span>
                                    <span>
                                        <label for="ProductionCompanyField">Production Company</label>
                                        <input id="ProductionCompanyField" name="ProductionCompanyField" type="text" class="field text ln" value="" tabindex="3">
                                    </span>
                                    <span>
                                        <label for="RegionField">Region</label>
                                        <input id="RegionField" name="RegionField" type="text" class="field text ln" value="" tabindex="4">
                                    </span>
                                    <span>
                                        <label for="JobStatusField">Job Status</label>
                                        <input id="JobStatusField" name="JobStatusField" type="text" class="field text ln" value="" tabindex="5">
                                    </span>
                                    <span>
                                        <label for="GenderField">Gender</label>
                                        <input id="GenderField" name="GenderField" type="text" class="field text ln" value="" tabindex="6">
                                    </span>
                                    <span>
                                        <label for="JobNameField">Job Title</label>
                                        <input id="JobNameField" name="JobNameField" type="text" class="field text ln" value="" tabindex="1">
                                    </span>
                            </li>
                            </ul>
                            </fieldset>

                </div>
                </section>
        </div>
        <div class="12u wufoo">
            <section class="section">
                <div class="step well">
                    <fieldset>
                        <legend class="headerlegend">Personal Details</legend>
                        <ul>
                            <li>
                                <fieldset>
                                    <legend>Appearance : </legend>
                                    <span>
                                        <label for="GenderField">Gender</label>
                                        <select id="GenderField" name="GenderField" class="field select addr" value="" tabindex="12">
                                            <option value="">--Please Select--</option>
                                            <option value="Male">Male</option>
                                            <option value="Female">Female</option>
                                        </select>
                                    </span>
                                    <span>
                                        <label for="AgeField">Age</label>
                                        <input id="AgeField" name="AgeField" type="text" class="field text fn" value="" size="8" tabindex="13">
                                    </span>
                                    <span>
                                        <label for="HeightField">Height</label>
                                        <input id="HeightField" name="HeightField" type="text" class="field text ln" value="" size="14" tabindex="14">
                                    </span>
                                    <span>
                                        <label for="ChestSizeField">Chest/Bust Size</label>
                                        <input id="ChestSizeField" name="ChestSizeField" type="text" class="field text ln" value="" size="14" tabindex="15">
                                    </span>
                                    <span>
                                        <label for="WaistField">Waist</label>
                                        <input id="WaistField" name="WaistField" type="text" class="field text ln" value="" size="14" tabindex="16">
                                    </span>
                                    <span>
                                        <label for="HipSizeField">Hip Size</label>
                                        <input id="HipSizeField" name="HipSizeField" type="text" class="field text ln" value="" size="14" tabindex="17">
                                    </span>
                                    <span>
                                        <label for="EyeColorField">Eye Color</label>
                                        <input id="EyeColorField" name="EyeColorField" type="text" class="field text ln" value="" size="14" tabindex="18">
                                    </span>

                                    <span>
                                        <label for="HairColorField">Hair Color</label>
                                        <input id="HairColorField" name="HairColorField" type="text" class="field text ln" value="" size="14" tabindex="19">
                                    </span>

                                </fieldset>
                                <span>
                                    <label for="HobbiesField">Hobbies</label>
                                    <textarea id="HobbiesField" placeholder="Share your hobbies..." name="HobbiesField" class="field text ln" tabindex="20">
                                    </textarea>
                                </span>

                                <span>
                                    <label for="AccentField">Accents/Languages</label>
                                    @Html.DropDownListFor(model => model.LanguageIds, new MultiSelectList(Model.SubCategoryEntities.Where(x => x.CategoryName == "New Zealand Language"), "SubCategoryId", "SubCategoryValue"), "--Please Select--",
                                                                                                                 new { multiple = "multiple", @size = "5", @style = "height: 1%;", @id = "AccentField", @name = "AccentField", @class = "field select addr multiselect", @tabindex = "21" })

                                    @* <input id="AccentField" name="AccentField" type="text" class="field text ln" value="" size="14" tabindex="22">*@
                                </span>

                                <span>
                                    <label for="EthicityField">Ethicity</label>
                                    <input id="EthicityField" name="EthicityField" type="text" class="field text ln" value="" size="14" tabindex="25">
                                </span>


                            </li>
                        </ul>
                    </fieldset>
                </div>

            </section>
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/CreateJob.js" type="text/javascript"></script> 