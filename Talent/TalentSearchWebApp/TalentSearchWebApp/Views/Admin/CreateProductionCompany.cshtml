@model BusinessEntities.Model.ProductionCompanyEntitiy
<style type="text/css">
    .slider {
        display: none;
    }
</style>


@using (Html.BeginForm())
{
    <div class="content">
        <div class="container">
            <div class="row" style="padding-top: 5%">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Add Production Company</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-xs-12 form-group">
                                    Production Company Name
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.TextBoxFor(model => model.ProductionCompanyName, new { required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ProductionCompanyName)
                                </div>

                                <div class="col-xs-12 form-group">
                                    Contact Person
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.TextBoxFor(model => model.ContactPerson, new { required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ContactPerson)
                                </div>

                                <div class="col-xs-12 form-group">
                                    Phone Number
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                                </div>

                                <div class="col-xs-12 form-group">
                                    Email
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.TextBoxFor(model => model.EmailId, new { required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EmailId)
                                </div>

                                <div class="col-xs-12 form-group">
                                    Region
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.DropDownListFor(model => model.RegionId, new SelectList(ViewBag.RegionEntities, "RegionId", "RegionName"), "--Please Select--",
                                                                    new { @id = "RegionField", @name = "RegionField", required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RegionId)
                                </div>

                                <div class="col-xs-12 form-group">
                                    Description Notes
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.TextBoxFor(model => model.DescriptionNotes, new { required = "", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DescriptionNotes)
                                </div>
                                <div class="col-xs-12 form-group">
                                    <input type="button" class="btn btn-primary" value="Create" onclick="CreateProductionCompany()" />
                                    <input type="submit" value="Submit" style="display: none" id="formsubmit" />
                                </div>
                                <div class="col-xs-12 form-group">
                                    @Html.ActionLink("Back to List", "ProductionCompany")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script src="~/Scripts/Custom/CreateProductionCompany.js" type="text/javascript"></script>
