@model BusinessEntities.Model.ProductionCompanyEntitiy

@using (Html.BeginForm()) {

    <fieldset>
        <legend>Production Company</legend>

        <div class="editor-label">
            Production Company Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductionCompanyName)
        </div>

        <div class="editor-label">
           Contact Person
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactPerson)
        </div>

        <div class="editor-label">
            Phone Number
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PhoneNumber)
        </div>

        <div class="editor-label">
           Email
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EmailId)
        </div>

         <div class="editor-label">
            Region
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RegionId, new SelectList(ViewBag.RegionEntities, "RegionId", "RegionName"), "--Please Select--",
                                                                    new { @id = "RegionField", @name = "RegionField" })
        </div>

        <div class="editor-label">
            Description Notes
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DescriptionNotes)
        </div>
        <p>
            <input type="button" value="Update" onclick="UpdateProductionCompany()" />  
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Close", "ProductionCompany")
</div>

<script type="text/javascript">
    var productionCompanyId = @ViewBag.ProductionCompanyId;
</script>
<script src="~/Scripts/Custom/EditProductionCompany.js" type="text/javascript"></script>
