@model BusinessEntities.Model.UserEntity


@{
    ViewBag.Title = "LogOn";
}
<style>
    .slider {
        display: none;
    }

    .wrapper.style1 {
        background-color: whitesmoke;
    }



    .checkbox {
        font-weight: normal;
    }

    .form-control {
        position: relative;
        font-size: 16px;
        height: auto;
        padding: 10px;
    }


    input[type="text"] {
        margin-bottom: -1px;
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    input[type="password"] {
        margin-bottom: 20px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
    }
</style>
<script>
    function login() {

    }

</script>


<div class="content">
    <div class="container">
        <div class="row" style="padding-top: 5%">
            <div class="col-xs-12 col-sm-3"></div>
            <div class="col-xs-12 col-sm-6">


                <form class="form-signin">
                    <div class="panel panel-default">
                        <div class="panel-heading">

                            <h3 class="panel-title">Admin login</h3>
                        </div>
                        <div class="panel-body">
                            <div class="row">

                                <div class="col-xs-12 form-group">

                                    @Html.TextBoxFor(user => user.UserName, new { placeholder = "Enter User Name", @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12  form-group">
                                    @Html.PasswordFor(user => user.Password, new { placeholder = "Enter Password", @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 form-group">
                                    <input type="submit" value="Login" class="form-control btn  btn-primary" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12 form-group">
                                    @Html.ActionLink("Forgot Password", "ForgotPassword", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-xs-12 col-sm-3"></div>
        </div>
    </div>
</div>
