<style type="text/css">
    .slider {
        display: none;
    }

    .btnwrapper {
        margin-left: 5%;
        margin-bottom: 2%;
        border: 1px solid #000;
        display: inline-block;
        position: relative;
    }

    #tblAssignedTalents tbody:empty + tfoot {
        display: table-footer-group;
    }

    #tblAssignedTalents tbody + tfoot {
        display: none;
        color: red;
    }

    .ui-dialog-titlebar-close {
        display: none;
    }

    .ui-dialog-titlebar {
        background-color: #ea6153!important;
        color: whitesmoke;
    }

    .btn {
        min-width: 1em;
    }

    .btnwrapper {
        margin-left: 5%;
        margin-bottom: 2%;
        border: 1px solid #000;
        display: inline-block;
        position: relative;
    }

    input[type="checkbox"], input[type="radio"] {
        -moz-appearance: checkbox;
        -webkit-appearance: checkbox;
        -o-appearance: checkbox;
        -ms-appearance: checkbox;
        display: inline;
        float: none;
        margin-right: -2em;
        opacity: 100;
        width: 1em;
        z-index: -1;
    }

    td {
        padding-left: 1em!important;
        padding-right: 1em!important;
    }

    th {
        padding-left: 1em!important;
        padding-right: 1em!important;
        text-align: center;
    }

    .table > thead > tr > td, .table > thead > tr > th {
        width: auto!important;
    }

    .dropdown.dropdown-lg .dropdown-menu {
        margin-top: -1px;
        padding: 6px 20px;
    }

    .input-group-btn .btn-group {
        display: flex !important;
    }

    .btn-group .btn {
        border-radius: 0;
        margin-left: -1px;
    }

        .btn-group .btn:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
        }

    .btn-group .form-horizontal .btn[type="submit"] {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .form-horizontal .form-group {
        margin-left: 0;
        margin-right: 0;
    }

    .form-group .form-control:last-child {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
</style>
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h3>Jobs</h3>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">

        <div class="row titlerow">

            <div class="col-sm-6 col-xs-12">
                <div class="input-group stylish-input-group">
                    <input type="text" id="Productiontxt" class="form-control" style="width: 40%; margin-left: 1em;" placeholder="Enter Company Name" />
                    <input type="text" id="Jobtxt" class="form-control" style="width: 40%; margin-left: 1em;" placeholder="Enter Job Title" />
                    <span class="input-group-addon">
                        <a href="#" onclick='return SearchJob()'>GO
                        </a>

                    </span>

                </div>

            </div>
            <div class="col-sm-6 col-xs-12" style="padding: 7px 0;">
                <div class="row">
                    <div class="col-sm-9 col-xs-12">
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        <input type="button" class="btn btn-success" style="float: right; margin-bottom: 2%;" value="Add New Job" onclick="@("window.location.href='" + @Url.Action("CreateJob", "Admin") + "'")    ;" />
                    </div>
                </div>
            </div>
        </div>

        <!-- ui-dialog -->
        <div id="dialog" title="Assign Talent">
            <div class="row">
                <div class="col-sm-12 col-xs-12" style="padding: 7px 0;">
                    <div class="col-sm-4 col-xs-12" style="padding: 7px 0;">
                        <div class="input-group" id="adv-search">
                            <input type="text" class="form-control" id="searchTxt" placeholder="Search" />
                            <div class="input-group-btn">
                                <div class="btn-group" role="group">
                                    <div class="dropdown dropdown-lg">
                                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><span class="caret"></span></button>

                                        <div class="dropdown-menu dropdown-menu-right" style="background-color: whitesmoke; min-width: 15em; overflow: scroll; height: 25em;" role="menu">
                                            <form class="form-horizontal" role="form">
                                                <div class="form-group">
                                                    <label for="contain">Region</label>
                                                    <select class="form-control" id="regiontxt">
                                                        <option value="">--select--</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Ethicity</label>
                                                    <input class="form-control" id="ethicitytxt" type="text" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="filter">Text Filter by</label>
                                                    <select class="form-control" id="searchcondition">
                                                        <option value="" selected>--Select--</option>
                                                        <option value="HairColor">Hair Color</option>
                                                        <option value="EyeColor">Eye Color</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Search Text</label>
                                                    <input class="form-control" id="conditiontxt" type="text" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="filter">Range Filter by</label>
                                                    <select class="form-control" id="rangesearchcondition">
                                                        <option value="" selected>--Select--</option>
                                                        <option value="Age">Age</option>
                                                        <option value="Waist">Waist</option>
                                                        <option value="Hip">Hip</option>
                                                        <option value="ChestBust">Chest/Bust</option>
                                                    </select>
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Min</label>
                                                    <input class="form-control" id="minconditiontxt" type="number" min="0" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="contain">Max</label>
                                                    <input class="form-control" id="maxconditiontxt" type="number" min="0" />
                                                </div>
                                                <button type="button" class="btn btn-primary" onclick="return GetTalentsForJob()"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                                            </form>
                                        </div>
                                    </div>
                                    <button type="button" class="btn btn-primary" onclick="return ResetJobs()"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xs-12" style="padding: 7px 0;">

                    <div>
                        <table cellpadding="4" cellspacing="4" width="90%" align="center" style="border: solid 2px gray;">
                            <tr>
                                <td align="center">
                                    <select id="list1" size="7" style="width: 100%;" multiple>
                                    </select>
                                </td>
                                <td style="vertical-align: middle; text-align: center">
                                    <input type="button" style="min-width: 5em;" id="btnAdd" value=">" /><br />
                                    <input type="button" style="min-width: 5em;" id="btnAddAll" value=">>" /><br />
                                    <input type="button" style="min-width: 5em;" id="btnRemove" value="<" /><br />
                                    <input type="button" style="min-width: 5em;" id="btnRemoveAll" value="<<" />
                                </td>
                                <td align="center">
                                    <select id="list2" size="7" style="width: 100%;" multiple>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 col-xs-12" style="padding: 7px 0;">

                    <div style="overflow: auto; height: 250px; margin-top: 2em;">
                        <table id="tblAssignedTalents" class="table">
                            <thead>
                                <tr>
                                    <th>Name
                                    </th>
                                    <th>EmailId
                                    </th>
                                    <th>Status
                                    </th>
                                    <th>Role
                                    </th>
                                    <th>Notification</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2">No talent assigned!
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div style="clear: both">
            </div>
        </div>
        <div id="gridArea" class="table">
            @{Html.RenderAction("GetJobsData", "Admin");}
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/JobList.js" type="text/javascript"></script>
