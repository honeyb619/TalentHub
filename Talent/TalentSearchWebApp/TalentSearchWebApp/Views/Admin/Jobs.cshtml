@{
    ViewBag.Title = "Jobs";
    <style type="text/css">
        .slider {
            display: none;
        }

        .btnwrapper {
            margin-left: 5%;
            margin-bottom: 2%;
            border: 1px solid #000;
            display: inline-block;
            position: relative;
        }

        #tblAssignedTalents tbody:empty + tfoot {
            display: table-footer-group;
        }

        #tblAssignedTalents tbody + tfoot {
            display: none;
            color: red;
        }

        .ui-dialog-titlebar-close {
            display: none;
        }

        .ui-dialog-titlebar {
        background-color:#ea6153!important;
        color:whitesmoke;
        }

        

    </style>  
}
<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h3>Jobs</h3>
            </div>
        </div>
    </div>
</div>
<div class="content">
    <div class="container">

        <div class="row titlerow">

            <div class="col-sm-6 col-xs-12">
                <div class="input-group stylish-input-group">
                    <input type="text" id="Productiontxt" class="form-control" style="width: 40%; margin-left: 1em;" placeholder="Enter Company Name" />
                    <input type="text" id="Jobtxt" class="form-control" style="width: 40%; margin-left: 1em;" placeholder="Enter Job Title" />
                    <span class="input-group-addon">
                        <a href="#" onclick='return SearchJob()'>GO
                        </a>

                    </span>

                </div>

            </div>
            <div class="col-sm-6 col-xs-12" style="padding: 7px 0;">
                <div class="row">
                    <div class="col-sm-9 col-xs-12">
                    </div>
                    <div class="col-sm-3 col-xs-12">
                        <input type="button" class="btn btn-success" style="float: right; margin-bottom: 2%;" value="Add New Job" onclick="@("window.location.href='" + @Url.Action("CreateJob", "Admin") + "'")    ;" />
                    </div>
                </div>
            </div>
        </div>

        <!-- ui-dialog -->
        <div id="dialog" title="Assign Talent">
            <div>
                <table cellpadding="4" cellspacing="4" width="90%" align="center" style="border: solid 2px gray;">
                    <tr>
                        <td align="center">
                            <select id="list1" size="7" style="width: 100%;" multiple>
                            </select>
                        </td>
                        <td style="vertical-align: middle; text-align: center">
                            <input type="button" style="min-width: 5em;" id="btnAdd" value=">" /><br />
                            <input type="button" style="min-width: 5em;" id="btnAddAll" value=">>" /><br />
                            <input type="button" style="min-width: 5em;" id="btnRemove" value="<" /><br />
                            <input type="button" style="min-width: 5em;" id="btnRemoveAll" value="<<" />
                        </td>
                        <td align="center">
                            <select id="list2" size="7" style="width: 100%;" multiple>
                            </select>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="overflow: auto; height: 250px; margin-top: 2em;">
                <table id="tblAssignedTalents" class="table">
                    <thead>
                        <tr>
                            <th>Name
                            </th>
                            <th>EmailId
                            </th>
                            <th>Status
                            </th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2">No talent assigned!
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div style="clear: both">
            </div>
        </div>
        <div id="gridArea" class="table">
            @{Html.RenderAction("GetJobsData", "Admin");}
        </div>
    </div>
</div>
<script src="~/Scripts/Custom/JobList.js" type="text/javascript"></script>
