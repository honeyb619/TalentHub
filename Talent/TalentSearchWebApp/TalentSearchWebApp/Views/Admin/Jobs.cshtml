@{
    ViewBag.Title = "Jobs";
    <style type="text/css">
        #banner
        {
            display: none;
        }
        
        .btnwrapper
        {
            margin-left: 5%;
            margin-bottom: 2%;
            border: 1px solid #000;
            display: inline-block;
            position: relative;
        }
        
        #tblAssignedTalents tbody:empty + tfoot
        {
            display: table-footer-group;
        }
        
        #tblAssignedTalents tbody + tfoot
        {
            display: none;
            color: red;
        }
    </style>  
}
<h3>
    Job List</h3>
<div style="padding: 7px 0;">
    <input type="button" style="float: right; margin-bottom: 2%;" value="Add New Job" 
            onclick="@("window.location.href='" + @Url.Action("CreateJob", "Admin") + "'")    ;" />
</div>
<div style="clear: both">
</div>
<div class="btnwrapper">
    <input type="text" id="txt" style="width: 80%" placeholder="Search" />
    <button style="width: 20%; height: 100%; background-color: transparent; border: 0;
        position: absolute; right: 0; top: 0;" onclick="SearchJob()">
        <span class="icon-search">GO</span>
    </button>
</div>
<!-- ui-dialog -->
<div id="dialog" title="Assign Talent">
    <div>
        <table cellpadding="4" cellspacing="4" width="90%" align="center" style="border: solid 2px gray;">
            <tr>
                <td align="center">
                    <select id="list1" size="7" multiple>
                    </select>
                </td>
                <td align="center" style="vertical-align: middle">
                    <input type="button" id="btnAdd" value=">" /><br />
                    <input type="button" id="btnAddAll" value=">>" /><br />
                    <input type="button" id="btnRemove" value="<" /><br />
                    <input type="button" id="btnRemoveAll" value="<<" />
                </td>
                <td align="center">
                    <select id="list2" size="7" multiple>
                    </select>
                </td>
            </tr>
        </table>
    </div>
    <div style="overflow: auto; height: 250px">
        <table id="tblAssignedTalents">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        EmailId
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <td colspan="2">
                        No talent assigned!
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div style="clear: both">
    </div>
</div>
<div id="gridArea">
    @{Html.RenderAction("GetJobsData", "Admin");}
</div>
<script src="~/Scripts/Custom/JobList.js" type="text/javascript"></script>
