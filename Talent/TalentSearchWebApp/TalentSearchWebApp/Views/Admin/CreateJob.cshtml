@model BusinessEntities.ViewModel.VmInsertJob
@{
    ViewBag.Title = "Create Job";
}
<style>
    .slider {
        display: none;
    }

    .row {
        padding-bottom: 1em;
    }

    .form-control {
        color: black;
    }

    .panel-body {
        color: black;
    }

        .panel-body label {
            color: whitesmoke;
        }
</style>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
@using (Ajax.BeginForm("CreateJob", "Admin", new AjaxOptions()
{
    OnSuccess = "Success",
    OnFailure = "Failure"
}))
{
    <div class="content">
        <div class="container">
            <div class="row" style="padding-top: 5%">
                <div class="col-xs-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">


                            @if (ViewBag.PageAction == "Update")
                            {
                                <h3 class="panel-title">Update Job</h3>

                            }
                            else
                            {
                                <h3 class="panel-title">Create Job</h3>
                       
                            }
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            @Html.HiddenFor(model => model.JobId)
                                            <label for="JobNameField">Job Title</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.JobName, new
                                       {
                                           @class = "form-control",
                                           @tabindex = "1",
                                           @id = "JobNameField",
                                           @name = "JobNameField"
                                       })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="JobDescriptionField">Job Description</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextAreaFor(model => model.JobDescription, new
                                       {
                                           @class = "form-control",
                                           @tabindex = "2",
                                           @id = "JobDescriptionField",
                                           @name = "JobDescriptionField"
                                       })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="ProductionCompanyField">Production Company</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.DropDownListFor(model => model.ProductionCompanyId, new SelectList(Model.ProductionCompanyList, "Id", "Name"), "--Please Select--",
                                                    new { @id = "ProductionCompanyField", @name = "ProductionCompanyField", @class = "field select addr", @tabindex = "3", required = "" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="RegionField">Region</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.DropDownListFor(model => model.RegionId, new SelectList(Model.RegionEntities, "RegionId", "RegionName"), "--Please Select--",
                                                                    new { @id = "RegionField", @name = "RegionField", @class = "field select addr", @tabindex = "4", required = "" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="JobStatusField">Job Status</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.DropDownListFor(model => model.StatusId, new SelectList(Model.SubCategoryEntities.Where(x => x.CategoryName == "Job Status"), "SubCategoryId", "SubCategoryValue"), "--Please Select--",
                                                                    new { @id = "JobStatusField", @name = "JobStatusField", @class = "field select addr multiselect", @tabindex = "5" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="GenderField">Gender</label>
                                        </div>
                                        <div class="col-xs-6">
                                            <select id="GenderField" name="Gender" class="field select addr" tabindex="6">
                                                <option value="">--Please Select--</option>
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="MinAgeField">Min Age</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.MinAge, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "7",
                                       @id = "MinAgeField",
                                       @name = "MinAgeField",
                                       @type = "number"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="MaxAgeField">Max Age</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.MaxAge, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "8",
                                       @id = "MaxAgeField",
                                       @name = "MaxAgeField",
                                       @type = "number"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="EyeColorField">Eye Color</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.EyeColor, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "9",
                                       @id = "EyeColorField",
                                       @name = "EyeColorField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="HeightField">Height</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Height, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "10",
                                       @id = "HeightField",
                                       @name = "HeightField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="WaistField">Waist</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Waist, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "11",
                                       @id = "WaistField",
                                       @name = "WaistField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="HairColorField">Hair Color</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.HairColor, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "12",
                                       @id = "HairColorField",
                                       @name = "HairColorField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="ChestSizeField">Chest Size</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.ChestSize, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "13",
                                       @id = "ChestSizeField",
                                       @name = "ChestSizeField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="HipSizeField">Hip Size</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.HipSize, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "14",
                                       @id = "HipSizeField",
                                       @name = "HipSizeField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="EthicityField">Ethicity</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Ethicity, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "15",
                                       @id = "EthicityField",
                                       @name = "EthicityField"
                                   })
                                        </div>
                                    </div>
                                </div>

                                  
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="AccentField">Accents/Languages</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.ListBoxFor(m => m.LanguageIds, new MultiSelectList(
                                   Model.SubCategoryEntities.Where(x => x.CategoryName == "New Zealand Language"),
        "SubCategoryId", "SubCategoryValue", Model.LanguageIds),
new { multiple = "multiple", @size = "5", @style = "height: 1%;", @id = "AccentField", @name = "AccentField", @class = "field select addr multiselect", @tabindex = "16" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="skill1NameField">Area of Expertise</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.ListBoxFor(m => m.SkillIds, new MultiSelectList(
                                       Model.SubCategoryEntities.Where(x => x.CategoryName == "Category" && x.ParentId != null),
"SubCategoryId", "SubCategoryValue", (Model.SkillIds)),
new { multiple = "multiple", @size = "5", @style = "height: 1%;", @id = "skill1NameField", @name = "SkillIds", @class = "field select addr multiselect", @tabindex = "17", required = "" })


                                        </div>
                                    </div>
                                </div>
                                @*<span>
                                        <label for="skill1DescField">Share your experiences</label>
                                         @Html.TextAreaFor(model => model.Skills[0].Description, new
                                    {
                                        @class = "form-control",
                                        @tabindex = "17",
                                        @id = "skill1DescField",
                                        @name = "Skills[0].Description",
                                        required = ""
                                    })
                                    </span>*@
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="PayField">Pay</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Pay, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "18",
                                       @id = "PayField",
                                       @name = "Pay"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="Role">Role</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Role
                                        , new
                                        {
                                            @class = "form-control",
                                            @tabindex = "19",
                                            @id = "Role",
                                            @name = "Role"
                                        })
                                        </div>
                                    </div>
                                </div>
                                 <div class="col-xs-12">
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <label for="EmailField">Email</label>
                                        </div>
                                        <div class="col-xs-6">
                                            @Html.TextBoxFor(model => model.Email, new
                                   {
                                       @class = "form-control",
                                       @tabindex = "20",
                                       @id = "EmailField",
                                       @name = "EmailField"
                                   })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    @if (ViewBag.PageAction == "Update")
                                    {
                                        <input type="submit" class="btn btn-primary" value="Update Job" id="btnJobSubmit" />
                                    }
                                    else
                                    { 
                                        <input type="submit" class="btn btn-primary" value="Create Job" id="btnJobSubmit" />
                                    }
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-12 col-sm-12 form-group">
                                    @Html.ActionLink("Back To List", "../Admin/Jobs")
                                </div>
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {

        if ($("#JobId").val() != 0) {
            $("#GenderField").val("@Model.Gender");


        }

        $("#AccentField").prepend("<option disabled value=''>--Please Select--</option>");
        $("#skill1NameField").prepend("<option disabled value=''>--Please Select--</option>");
    });
</script>
<script src="~/Scripts/Custom/CreateJob.js" type="text/javascript"></script>
